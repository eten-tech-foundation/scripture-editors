{
  "name": "@eten-tech-foundation/platform-editor",
  "version": "0.8.4",
  "description": "Scripture editor used in Platform. See https://platform.bible",
  "license": "MIT",
  "homepage": "https://github.com/eten-tech-foundation/scripture-editors/tree/main/packages/platform#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eten-tech-foundation/scripture-editors.git"
  },
  "bugs": {
    "url": "https://github.com/eten-tech-foundation/scripture-editors/issues"
  },
  "type": "module",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "development": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "!src/**/*.test.ts",
    "!src/**/*.test.tsx"
  ],
  "scripts": {
    "prepublishOnly": "tsx scripts/prepare-publish.ts && cd ../.. && nx extract-api platform-editor",
    "postpublish": "git restore package.json",
    "predevpub": "npm run prepublishOnly",
    "devpub": "yalc push",
    "postdevpub": "npm run postpublish"
  },
  "peerDependencies": {
    "react": ">=18.3.1",
    "react-dom": ">=18.3.1"
  },
  "dependencies": {
    "@eten-tech-foundation/scripture-utilities": "workspace:~",
    "@floating-ui/dom": "^1.7.4",
    "@lexical/react": "^0.34.0",
    "@lexical/selection": "^0.34.0",
    "@lexical/text": "^0.34.0",
    "@lexical/utils": "^0.34.0",
    "@lexical/yjs": "^0.34.0",
    "@sillsdev/scripture": "^2.0.2",
    "fast-equals": "^5.2.2",
    "lexical": "^0.34.0",
    "quill-delta": "^5.1.0",
    "yjs": "^13.6.27"
  },
  "devDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "shared": "workspace:~",
    "shared-react": "workspace:~"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "volta": {
    "extends": "../../package.json"
  }
}
