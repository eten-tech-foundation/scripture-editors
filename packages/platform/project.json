{
  "name": "@eten-tech-foundation/platform-editor",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "{projectRoot}/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "devpub": {
      "executor": "nx:run-commands",
      "dependsOn": ["extract-api"],
      "options": {
        "command": "yalc push",
        "cwd": "{projectRoot}"
      }
    },
    "extract-api": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "cache": true,
      "inputs": ["production", "^production", "{projectRoot}/config/api-extractor.json"],
      "outputs": ["{projectRoot}/dist", "{projectRoot}/etc", "{projectRoot}/temp"],
      "options": {
        "commands": [
          "api-extractor run --local --verbose",
          "npx prettier --write \"dist/**/*.d.ts\""
        ],
        "cwd": "{projectRoot}",
        "parallel": false
      }
    }
  }
}
